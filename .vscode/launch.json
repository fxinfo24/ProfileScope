{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Desktop App",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "args": ["--mode", "desktop"],
            "console": "integratedTerminal"
        },
        {
            "name": "Web App",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run.py",
            "args": ["--mode", "web"],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        }
    ]
}
