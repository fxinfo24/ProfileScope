{
  "$comment": "ProfileScope Frontend Deployment - React SPA with API proxy",
  "buildCommand": "npm install --prefix frontend && npm run build --prefix frontend",
  "outputDirectory": "frontend/dist",
  "installCommand": "echo 'Skipping root install'",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://profilescope-production.up.railway.app/api/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_API_BASE_URL": "https://profilescope-production.up.railway.app/api"
  }
}
