# ProfileScope Environment Configuration
# Copy this file to .env and fill in your API credentials

# Twitter API Credentials
# Get these from https://developer.twitter.com/
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here
TWITTER_ACCESS_TOKEN=your_twitter_access_token_here
TWITTER_ACCESS_TOKEN_SECRET=your_twitter_access_token_secret_here

# Facebook API Credentials  
# Get these from https://developers.facebook.com/
FACEBOOK_APP_ID=your_facebook_app_id_here
FACEBOOK_APP_SECRET=your_facebook_app_secret_here
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token_here

# Flask Configuration
FLASK_APP=app.web.app
FLASK_SECRET_KEY=your_secret_key_for_flask_sessions
SECRET_KEY=your_secret_key_for_flask_sessions
FLASK_DEBUG=false
FLASK_HOST=127.0.0.1
FLASK_PORT=5000

# CORS Configuration (comma-separated list of allowed origins)
# For production, set to your frontend URL(s)
# Example: https://yourapp.vercel.app,https://yourdomain.com
# Railway: Set this in your environment variables to include your Vercel deployment URL
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://profile-scope.vercel.app

# Database Configuration
DATABASE_URI=sqlite:///data/profilescope.db

# Redis Configuration (for Celery background tasks)
# Local development: redis://localhost:6379/0
# Railway production: Automatically provided by Railway Redis add-on
# Leave blank to use threading fallback (no Redis required)
REDIS_URL=redis://localhost:6379/0

# OpenRouter API Key (for AI-powered analysis)
# Get from: https://openrouter.ai/
OPENROUTER_API_KEY=your_openrouter_api_key_here

# ScrapeCreators API Key (for social media data collection)
# Get from: https://scrapecreators.com/
SCRAPECREATORS_API_KEY=your_scrapecreators_api_key_here

# Optional: Force Celery mode (leave blank to use threading)
# Set to "true" only if you have Redis + Celery worker running
FORCE_CELERY=false

# Optional: ProfileScope Configuration File Path
PROFILESCOPE_CONFIG=config/config.json